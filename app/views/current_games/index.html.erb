<% @current_game = current_user.latest_game %>
<div class="container">
	<div class="row">
		  <div class="col-12"><h3>Current Game</h3></div>
	</div>
    <!--Row with two equal columns-->
    <div class="row">
        <div class="col-md-6 text-end title_lower"><span>Survivalist</span></div>
        <div class="col-md-6 text-start"><%= image_tag "survivalists/#{@current_game.survivalist.image_path}.png", size: "140x140" %></div>
    </div>
	
    <!--Row with two equal columns-->
    <div class="row">
        <div class="col-md-6 text-end title_lower"><span>Location</span></div>
        <div class="col-md-6 text-start"><%= image_tag "locations/#{@current_game.location.image_path}.png", size: "140x140" %></div>
    </div>
    

    <!--Row with two columns divided in 1:3 ratio-->
    <div class="row">
		<div class="col-md-6 text-end"><%= link_to 'Edit', edit_current_game_path(@current_game) %> | <%= link_to 'Destroy', @current_game, method: :delete, data: { confirm: 'Are you sure?' } %></div>
        <div class="col-md-6 text-start"><%= link_to 'Continue', @current_game %></div>
        
    </div>
</div>
