<% player = @data_from_select!="" ? Survivalist.find(@data_from_select) : "none" %>
<% if player=="none" %>
<div class="row">
  <div class="col-8">
    <div class="row">
		Please select a survivalist.
	</div>
  </div>
</div>
<% else %>
<div class="row">
  <div class="col-8">
    <div class="row">
      <div class="col-10"><h3><%= player.name %></h3></div>
    </div>
    <div class="row">
      <div class="col-4 text-start">Strength</div>
      <div class="col-6 text-start"><%= player.strength %></div>
    </div>
    <div class="row">
      <div class="col-4 text-start">Creativity</div>
      <div class="col-6 text-start"><%= player.creativity %></div>
    </div>
    <div class="row">
      <div class="col-4 text-start">Determination</div>
      <div class="col-6 text-start"><%= player.determination %></div>
    </div>
    <div class="row">
      <div class="col-4 text-start">Optimism</div>
      <div class="col-6 text-start"><%= player.optimism %></div>
    </div>
    <div class="row">
      <div class="col-4 text-start">Skill</div>
      <div class="col-6 text-start"><%= player.skill %></div>
    </div>
  </div>
  <div class="col-2">
	  <div id="image"><%= image_tag "survivalists/#{player.image_path}.png", size: "140x140" %>
	  </div>
  </div>
</div>
<% end %>