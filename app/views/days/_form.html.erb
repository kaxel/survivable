<% cur_game = CurrentGame.first %>

<%= form_with(model: day) do |form| %>
  <% if day.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(day.errors.count, "error") %> prohibited this day from being saved:</h2>

      <ul>
        <% day.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
	Hour: <%= form.text_field :hour, :value => cur_game.earliest, :readonly => true %>
  </div>

  <div class="field">
	<%= form.collection_select :event_id, Event.order(:name),:id,:name, include_blank: false, :class => "game_dropdown" %>
  </div>

  <div class="actions">
    <%= form.submit "Take action" %>
  </div>
<% end %>