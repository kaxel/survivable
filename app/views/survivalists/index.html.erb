<p id="notice"><%= notice %></p>

<h1>Survivalists</h1>

<table>
  <thead>
    <tr>
      <th>Strength</th>
      <th>Creativity</th>
      <th>Determination</th>
      <th>Optimism</th>
      <th>Skill</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @survivalists.each do |survivalist| %>
      <tr>
        <td><%= survivalist.strength %></td>
        <td><%= survivalist.creativity %></td>
        <td><%= survivalist.determination %></td>
        <td><%= survivalist.optimism %></td>
        <td><%= survivalist.skill %></td>
        <td><%= link_to 'Show', survivalist %></td>
        <td><%= link_to 'Edit', edit_survivalist_path(survivalist) %></td>
        <td><%= link_to 'Destroy', survivalist, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Survivalist', new_survivalist_path %>
