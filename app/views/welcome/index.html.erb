<h1>Survivable Authentication</h1>

<% if Current.user %>
    <p class="text-left">Logged in as: <%= Current.user.email %></p>
	<p class="text-center"><%= link_to 'Start New Game', new_current_game_path %></p>
	<br><br>
	<p class="text-center">
    <%= link_to 'Edit Password', edit_password_path %>
    <%= button_to 'Logout', logout_path, method: :delete %>
    <% else %>
    <%= link_to 'Sign Up', sign_up_path %>
    or
    <%= link_to 'Login', sign_in_path %>
	</p>
<% end %>